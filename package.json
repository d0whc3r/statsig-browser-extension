{
  "name": "statsig-browser-extension",
  "version": "1.0.2",
  "private": true,
  "description": "Manage Statsig feature gates and experiments directly from your browser. View user details, override gates, and debug efficiently.",
  "keywords": [
    "ab-testing",
    "browser-extension",
    "developer-tools",
    "experimentation",
    "feature-flags",
    "statsig"
  ],
  "homepage": "https://github.com/d0whc3r/statsig-browser-extension#readme",
  "bugs": {
    "url": "https://github.com/d0whc3r/statsig-browser-extension/issues"
  },
  "license": "ISC",
  "author": "d0whc3r",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d0whc3r/statsig-browser-extension.git"
  },
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:chrome": "wxt -b chrome",
    "dev:edge": "wxt -b edge",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:chrome": "wxt build -b chrome",
    "build:edge": "wxt build -b edge",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:chrome": "wxt zip -b chrome",
    "zip:edge": "wxt zip -b edge",
    "zip:all": "pnpm zip:chrome && pnpm zip:firefox && pnpm zip:edge",
    "prepare": "husky && wxt prepare",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "lint": "oxlint",
    "lint:fix": "pnpm lint --fix",
    "format:fix": "pnpm lint:fix --fix-suggestions --fix-dangerously && pnpm format",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm test"
  },
  "dependencies": {
    "@fontsource/inter": "5.2.8",
    "@hookform/resolvers": "5.2.2",
    "@radix-ui/react-radio-group": "1.3.8",
    "@radix-ui/react-tabs": "1.1.13",
    "@tanstack/react-query": "5.90.21",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "fuse.js": "7.1.0",
    "lucide-react": "0.574.0",
    "radix-ui": "1.4.3",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "7.71.1",
    "tailwind-merge": "3.4.1",
    "tw-animate-css": "1.4.0",
    "vaul": "1.1.2",
    "wretch": "3.0.6",
    "zod": "4.3.6",
    "zustand": "5.0.11"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@tailwindcss/postcss": "4.1.18",
    "@tailwindcss/vite": "4.1.18",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/chrome": "0.1.36",
    "@types/node": "^24",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@types/webextension-polyfill": "0.12.4",
    "@vitejs/plugin-react": "5.1.4",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "@wxt-dev/module-react": "1.1.5",
    "autoprefixer": "10.4.24",
    "happy-dom": "20.6.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "oxfmt": "0.33.0",
    "oxlint": "1.48.0",
    "oxlint-tsgolint": "0.14.0",
    "postcss": "8.5.6",
    "semantic-release": "25.0.3",
    "semantic-release-chrome": "3.2.0",
    "semantic-release-firefox-add-on": "0.2.8",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "webextension-polyfill": "0.12.0",
    "wxt": "0.20.17"
  },
  "lint-staged": {
    "*": [
      "oxlint --fix",
      "oxfmt --no-error-on-unmatched-pattern --write"
    ]
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.30.0"
}
